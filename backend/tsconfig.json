{
  "extends": "@tsconfig/node23/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist", // folder to handle the compilation from ts to js 
    "allowJs": true, // allow js files
    "sourceMap": true, // for debugging
    "declaration": false, // for .d.ts files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"] // type issues
}
